
<div class="flip">
    <div class="front" style="background-image: url(https://source.unsplash.com/<%= rand(1400..1500) %>x900/?cocktail)">
        <h1 class= "text-shadow"><%= @cocktail.name %></h1>
        </div>
          <div class="back">
       <h2>Nice Choice!</h2>
       <p>Don't get drunk</p>
    </div>
</div>
       



<% @cocktail.doses.each do |dose| %>




    <div class="ingredient">

        <p>Description</p>
            <span class="dose"><%= dose.description %></span>
                <br>
                <br>
        <p>Details</p>
        <span class="dose"><%= dose.ingredient.name %></span>

        <%= link_to dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash"></i>
            <% end %>
        <% end %>
     </div>

